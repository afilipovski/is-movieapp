@model MovieApp.Models.DTO.OrderDTO

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Order">Place Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AllTickets) {
        <tr>
            <td>
                @item.Ticket.Movie.MovieName
            </td>
            <td>
                @item.Ticket.Price
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <td>Total price:</td>
            <td>@Model.TotalPrice</td>
        </tr>
    </tfoot>
</table>
